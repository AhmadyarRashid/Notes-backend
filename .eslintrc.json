{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard", "eslint:recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 80
      }
    ],
    "@typescript-eslint/ban-ts-comment": [ "warn" ],
    "@typescript-eslint/no-use-before-define": [
      "error"
    ]
  }
}
